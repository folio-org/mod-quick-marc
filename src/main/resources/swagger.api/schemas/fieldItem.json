{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "MARC Field Schema",
  "description": "MARC Field Schema",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "tag": {
      "description": "MARC record tag name",
      "type": "string",
      "pattern": "^[0-9]{3}$",
      "example": "001"
    },
    "content": {
      "description": "MARC record tag content",
      "type": "object",
      "example": "393893"
    },
    "indicators": {
      "description": "MARC record tag indicator values",
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 0,
      "maxItems": 2
    },
    "isProtected": {
      "description": "Flag indicates if the field data is protected",
      "type": "boolean",
      "readOnly": true,
      "default": false,
      "example": true
    },
    "authorityId": {
      "description": "Id of the authority that controls subfields",
      "$ref": "uuid.json",
      "example": "c9db5d6a-e1d4-11e8-9f32-f2801f1b9fd1"
    },
    "authorityNaturalId": {
      "description": "Natural id of the authority that controls subfields",
      "type": "string",
      "example": "n1234567890"
    },
    "authorityControlledSubfields": {
      "description": "Subfields' codes that are controlled by an authority",
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 100
    }
  },
  "required": [
    "tag",
    "content"
  ]
}
